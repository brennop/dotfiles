line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 2
padding-right = 2

module-margin-left = 0.5
module-margin-right = 1 

font-0 = Tewi:pixelsize=9;1
;font-0 = Inconsolata:pixelsize=10;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=8;1
font-3 = "Font Awesome 5 Free:style=Regular:pixelsize=8;1"
font-4 = "Font Awesome 5 Free:style=Solid:pixelsize=8;1"
font-5 = "Font Awesome 5 Brands:pixelsize=8;1"

modules-left = mpd 
modules-center = 
modules-right = bat date

tray-position = left 
tray-padding = 2
;tray-transparent = true
;tray-background = #0063ff

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

