#!/bin/bash

function link () {
  ln -sf ~/dotfiles/$1 ~/$1
}

if [ -z "$1" ]; then
  declare -a cfgs=(
    "bin"
    ".Xresources"
    ".tmux.conf"
    ".vimrc"
    ".config/fish" 
    ".config/nvim" 
    ".config/foot" 
    ".config/sway" 
  )

  for val in ${cfgs[@]}
  do
    link $val
  done
else
  link $1
fi

